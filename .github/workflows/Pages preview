name: Pages preview (PR)

on:
  pull_request:
    branches: [ main ]

permissions:
  contents: read
  pages: write       # required for Pages deploy
  id-token: write    # required for OIDC auth

concurrency:
  group: "pages-pr-${{ github.ref }}"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # If you ever add a build step (e.g., npm run build), do it here.
      # For pure static sites, just upload the repo root:
      - uses: actions/upload-pages-artifact@v3
        with:
          path: .

  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - id: deployment
        uses: actions/deploy-pages@v4

